container{
height: 100%;
}
.mymsg{
	width: 100%;
	margin: 22rpx 0;
	background-color: #fff;
	display: flex;
	flex-direction: column;
}
.myInfo{
	height: 180rpx;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #cccccc;
	display: flex;
	align-items: center;
	font-size: 38rpx;
	color: #333333;
}
.HeadImg{
	width: 125rpx;
	height: 125rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 45rpx;
}
.readerMsg{
	height: 130rpx;
	display: flex;
	justify-content: space-around;
}
.jifen{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	font-size: 26rpx;
	color: #999999;
}
.jfnum{
	font-size: 32rpx;
	color: #ffa814;
}

.time{
	font-size: 32rpx;
	color: #fe6c5f;
}
.myOperation{
	width: 100%;
	height: 380rpx;
	padding: 15rpx 30rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction:column;
	justify-content:space-around;
	background-color: #fff;
}
.exchange{
	flex: 1;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.myBtnIcon{
	width: 60rpx;
	height: 50rpx;
	margin-right: 15rpx;
}
.op_l{
	width: 270rpx;
	font-size: 32rpx;
	color: #333;
	display: flex;
	align-items: center;
}
.op_r{
	flex: 1;
	font-size: 26rpx;
	color: #999;
	text-align: right;
}
.share{
	margin: 20rpx 0;
	width: 100%;
	height: 250rpx;
	padding: 12rpx 92rpx;
	background-color: #fff;
	box-sizing: border-box;
	position: relative;
}
.shareBtn{
	opacity:0;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 9;
}
.share image{
	position: relative;
	z-index: 1;
}