<!--logs.wxml-->
<import src="../../vendor/wxParse/wxParse.wxml" />

<import src="/utils/pageState/index.wxml" />
<template is="pageState" data="{{...pageState}}" />
<view class="container">
  <view class="topBox">
		<view class="topTit">
			<view class="p1">{{details.title}}</view>
			<view class="p2">{{details.ftitle}}</view>
			<view class="p2">作者：{{details.zuozhe}}      {{details.nian}}年{{details.yue}}月</view>
		</view>
		<view class="wxfwb">
			<template is="wxParse" data="{{wxParseData:article.nodes}}" />
		</view>
		<view class="buyBox" wx:if="{{details.readpoint}}">
			<view class="btn1">购买本章 {{details.readpoint}}积分</view>
			<view class="btn2">购买阅读卡</view>
		</view>
		<view class="shareBox">
			<view class="shareFx" bindtap="share" >
      <button class="shareBtn" open-type='share' data-supid="1" data-type="1"></button>
				<view class="fxicon">
					<image src="/static/images/share_03.png"></image>
				</view>
				<text>分享挣取积分</text>
			</view>
			<view class="shareFx" bindtap="share">
      <button class="shareBtn" open-type='share' data-supid="1" data-type="2"></button>
				<view class="fxicon">
					<image src="/static/images/share_05.png"></image>
				</view>
				<text>邀请好友</text>
			</view>
			<view class="shareFx" bindtap="share" data-type="3">
				<view class="fxicon">
					<image src="/static/images/share_07.png"></image>
				</view>
				<text>点赞</text>
			</view>
		</view>
	</view>
	<view class="dszl">
		<view class="dstitle">
			相关推荐
		</view>
		<view class='newslist'>
		  <view wx:if="{{idx<5}}" class="newsOne" bindtap="jump" 
						data-id="{{item.id}}"
						wx:for="{{xiangguan}}" 
						wx:for-index="idx" 
						wx:for-item="item"
						wx:key="idx"
            bindtap="jumpdt" 
            data-id="2">
		    <view class="xxIcon" >
					<image hidden="{{item.catid!= 8}}" src="/static/images/btn2_1.jpg"></image>
					<image hidden="{{item.catid!= 10}}" src="/static/images/btn2_3.jpg"></image>
					<image hidden="{{item.catid!= 9}}"  src="/static/images/btn2_2.jpg"></image>
					<!-- <image hidden="{{num!= 3}}" src="/static/images/btn2_4.jpg"></image> -->
				</view>
		    <view class="inner">
		      <view class='newsinr'>{{item.title}}</view>
		      <view class='newsnum'>
		      	<view>音频   20:30</view>
		      	<view class="zfMax"></view>
		      </view>
		    </view>
		  </view>
		</view>
	</view>
	<view class="dszl bookRecommend">
		<view class="dstitle">
			图书推荐
		</view>
		<view class="bookBox">
			<view  data-id="{{item.id}}"
						wx:for="{{books}}" 
						wx:for-index="idx" 
						wx:for-item="item"
						wx:key="idx">
				<view class="bookOne">
					<image src="{{'http://sf.zgylbx.com'+item.thumb}}"></image>
				</view>
				<view class="bookname">{{item.title}}</view>
				<!-- <view class="bookmsg">
					<view>￥111</view>
					<view class="bookbtn" bindtap="rob" data-id="0">马上抢</view>
				</view> -->
			</view>
			<!-- <view>
				<view class="bookOne">
					<image src="../../static/images/bg.jpg"></image>
				</view>
				<view class="bookname">《向航空业学管理向航空业学管理》</view>
				<view class="bookmsg">
					<view>￥111</view>
					<view class="bookbtn" bindtap="rob" data-id="1">马上抢</view>
				</view>
			</view> -->
		</view>
	</view>
	
	
	
</view>
