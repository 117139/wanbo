<!--logs.wxml-->
<import src="/utils/pageState/index.wxml" />
<import src="/component/listHeader/listHeader.wxml" />
<template is="pageState" data="{{...pageState}}" />
<view class="container log-list">
	<template is="listHeader" data="{{num}}" />
	<form  bindsubmit="formSubmit">
	  <view class='sousuo'>
			
			
			<view class="ipt">
				<input name="sr"></input>
			</view>
			<view class='ss_btn'>
				<button  form-type="submit"></button>
				<image src="/static/images/sousuo.png"></image>
			</view>
		</view>
	  
	</form >
	
	<view class="selectTime">
		<view class="tabselect">
			<view class="{{num==0?'cur':''}}" bindtap="tab" data-index="0">微杂志</view>
			<view class="{{num==1?'cur':''}}" bindtap="tab" data-index="1">微原创</view>
			<view class="{{num==2?'cur':''}}" bindtap="tab" data-index="2">微音频</view>
			<view class="{{num==3?'cur':''}}" bindtap="tab" data-index="3">微视频</view>
		</view>
	</view>
 <view class="tabSwiper"
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
	 current="{{num}}"
	 bindchange="aa"
>
  <view wx:if="{{num==0}}">
  	<scroll-view scroll-y class="inrBox">
  		<view class="yearsBox" wx:for="{{arr1}}" wx:for-index="idx0" wx:for-item="item0" wx:key="idx0">
  			<view class="year">2019年</view>
  			<view class="fenqiBox">
  				<view class="fenqi"
						wx:for="{{arr1}}"
						wx:for-index="idx1"
						wx:for-item="item1"
						wx:key="idx1"
						bindtap="jump"
						data-year="2019"
						data-month="{{item1}}"
						>
  					第{{item1}}期
  				</view>
  			</view>
  		</view>
  	</scroll-view>
  </view>
	<view wx:elif="{{num == 1}}">
		<scroll-view scroll-y class="inrBox">
			<view class='newslist'>
				<view class="zanwu" wx:if="{{list1.length==0}}">暂无内容</view>
			  <view class="newsOne"  wx:for="{{list1}}" 
            wx:for-index="idx" 
            wx:for-item="item" 
            wx:key="idx"
            bindtap="jumpdt" 
            data-id="{{item.id}}"
            data-catid="{{item.catid}}"
            data-type="1">
			    <view class="xxIcon" >
						<image src="/static/images/btn2_3.jpg"></image>
					</view>
			    <view class="inner">
			      <view class='newsinr'>{{item.title}}</view>
			      <!-- <view class='newsnum'>
							<view>字数   3500</view>
							<view class="zfMax"></view>
						</view> -->
			    </view>
			  </view>
			</view>
		</scroll-view>
	</view>
	<view wx:elif="{{num == 2}}">
		<scroll-view scroll-y class="inrBox">
			<view class='newslist'>
				<view class="zanwu" wx:if="{{list2.length==0}}">暂无内容</view>
			  <view class="newsOne"  
            wx:for="{{list2}}" 
            wx:for-index="idx" 
            wx:for-item="item" wx:key="idx"
            bindtap="jumpdt" 
            data-id="{{item.id}}"
            data-catid="{{item.catid}}"
            data-type="2">
			    <view class="xxIcon" >
						<image src="/static/images/btn2_2.jpg"></image>
					</view>
			    <view class="inner">
			      <view class='newsinr'>{{item.title}}</view>
			      <view class='newsnum'>
							<view>音频</view>
							<view class="zfMax"></view>
						</view>
			    </view>
			  </view>
			</view>
		</scroll-view>
	</view>
	<view wx:elif="{{num == 3}}">
		<scroll-view scroll-y class="inrBox">
			<view class='newslist'>
				<view class="zanwu" wx:if="{{list3.length==0}}">暂无内容</view>
			  <view class="newsOne"  wx:for="{{list3}}" wx:for-index="idx" wx:for-item="item" wx:key="idx"
            bindtap="jumpdt" 
            data-id="1"
            data-type="3">
			    <view class="xxIcon" >
						<image src="/static/images/btn2_4.jpg"></image>
					</view>
			    <view class="inner">
			      <view class='newsinr'>{{item.title}}</view>
			      <view class='newsnum'>
							<view>视频</view>
							<view class="zfMax"></view>
						</view>
			    </view>
			  </view>
			</view>
		</scroll-view>
	</view>
</view>
</view>
