<!--logs.wxml-->
<view class="container log-list">
	<form  bindsubmit="formSubmit">
	  <view class='sousuo'>
			<view class="ipt">
				<input name="sr"></input>
			</view>
			<view class='ss_btn'>
				<button  form-type="submit"></button>
				<image src="/static/images/sousuo.png"></image>
			</view>
			
		</view>
	  
	</form >
	
	<view class="selectTime">
		<view class="tabselect">
			<view class="{{num==0?'cur':''}}" bindtap="tab" data-index="0">微杂志</view>
			<view class="{{num==1?'cur':''}}" bindtap="tab" data-index="1">微原创</view>
			<view class="{{num==2?'cur':''}}" bindtap="tab" data-index="2">微音频</view>
			<view class="{{num==3?'cur':''}}" bindtap="tab" data-index="3">微视频</view>
		</view>
	</view>
 <swiper class="tabSwiper"
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
	 current="{{num}}"
	 bindchange="aa"
>
  <swiper-item>
  	<scroll-view scroll-y class="inrBox">
  		<view class="yearsBox" wx:for="{{arr1}}" wx:for-index="idx0" wx:for-item="item0" wx:key="idx0">
  			<view class="xxIcon" >
  				<image src="/static/images/btn2_1.jpg"></image>
  			</view>
  			<view class="inner">
  			  <view class='newsinr'>局长访谈一以“两强两优”推进医保经办服务局长访谈一以“两强两优”推进医保经办服务</view>
  			  <view class='newsnum'>
  					<view>2019年第1期 20:30</view>
  					<view class="zfMax"></view>
  			    <!-- 转发最多 -->
  				</view>
  			</view>
  		</view>
  	</scroll-view>
  </swiper-item>
	<swiper-item>
		<scroll-view scroll-y class="inrBox">
			<view class='newslist'>
			  <view class="newsOne"  wx:for="{{arr1}}" 
            wx:for-index="idx" 
            wx:for-item="item" 
            wx:key="idx"
            bindtap="jumpdt" 
            data-id="1"
            data-type="1">
			    <view class="xxIcon" >
						<image src="/static/images/btn2_3.jpg"></image>
					</view>
			    <view class="inner">
			      <view class='newsinr'>局长访谈一以“两强两优”推进医保经办服务局长访谈一以“两强两优”推进医保经办服务</view>
			      <view class='newsnum'>
							<view>字数   3500</view>
							<view class="zfMax"></view>
              <!-- 转发最多 -->
						</view>
			    </view>
			  </view>
			</view>
		</scroll-view>
	</swiper-item>
	<swiper-item>
		<scroll-view scroll-y class="inrBox">
			<view class='newslist'>
			  <view class="newsOne"  
            wx:for="{{arr1}}" 
            wx:for-index="idx" 
            wx:for-item="item" wx:key="idx"
            bindtap="jumpdt" 
            data-id="1"
            data-type="2">
			    <view class="xxIcon" >
						<image src="/static/images/btn2_2.jpg"></image>
					</view>
			    <view class="inner">
			      <view class='newsinr'>微音频微音频微音频微音频微音频微音频微音频微音频微音频微音频微音频微音频</view>
			      <view class='newsnum'>
							<view>音频   20:30</view>
							<view class="zfMax"></view>
						</view>
			    </view>
			  </view>
			</view>
		</scroll-view>
	</swiper-item>
	<swiper-item>
		<scroll-view scroll-y class="inrBox">
			<view class='newslist'>
			  <view class="newsOne"  wx:for="{{arr1}}" wx:for-index="idx" wx:for-item="item" wx:key="idx"
            bindtap="jumpdt" 
            data-id="1"
            data-type="3">
			    <view class="xxIcon" >
						<image src="/static/images/btn2_4.jpg"></image>
					</view>
			    <view class="inner">
			      <view class='newsinr'>微视频微视频微视频微视频微视频微视频微视频微视频微视频</view>
			      <view class='newsnum'>
							<view>视频   20:30</view>
							<view class="zfMax"></view>
						</view>
			    </view>
			  </view>
			</view>
		</scroll-view>
	</swiper-item>
</swiper>
</view>
