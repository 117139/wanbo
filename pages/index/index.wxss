/**index.wxss**/
.huoqumsg{
  width: 0;
  height: 0;
  opacity: 0;
}
.sousuo{
  width: 500rpx;
  height: 60rpx;
  margin: 22rpx 0;
  padding: 0 25rpx;
  display: flex;
	flex-direction: row;
	align-items: center;
  border-radius: 52rpx;
  background-color: #dddddd;
}

.ss_btn{
  width: 40rpx;
  height: 40rpx;
	margin-right: 10rpx;
	position: relative;
}
.ss_btn button{
	width: 100%;
	height: 100%;
	opacity: 0;
	position: absolute;
	top: 0;
}
.sousuo .ipt{
	flex: 1;
	padding:0 10px;
}
.ipt input{
  font-size: 28rpx;
}
.banner{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  height:300rpx;
	background-color: #fff;
}
.banner image{
  width: 100%;
  height:100%;
  border-radius: 16rpx;
}
.btn_g{
  width:100%;
  height: 210rpx;
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 0;
	background-color: #fff;
}
.btnOne{
  width:105rpx;
  text-align: center;
}

.btnIcon{
  width:105rpx;
  height: 105rpx;
  margin-bottom: 15rpx;
}
.btnOne text{
  font-size: 28rpx;
}
swiper {
	height:100%;
}

.news{
  width:100%;
  padding:0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
	background-color: #fff;
}
.newsTit{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title{
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
}
.newChange{
  color: #666;
  height: 100%;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.changeIcon{
  width: 36rpx;
  height:36rpx;
  margin-right: 10rpx;
}
.newslist{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.newsinr{
  font-size: 32rpx;
  color: #333;
}
.newsnum{
  font-size: 26rpx;
  color: #999;
}
.newsOne{
	height: 105rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.xxIcon{
	width: 55rpx;
	height: 55rpx;
	margin-right: 12px;
}
.inner{
	flex: 1;
}
.newsinr{
	width: 600rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;

}

